{
  "name": "neuraforge-os-workspace",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "neuraForgeOS-monorepo/neuraforge-os/apps/*",
    "neuraForgeOS-monorepo/neuraforge-os/packages/*"
  ],
  "scripts": {
    "build": "cd neuraForgeOS-monorepo/neuraforge-os && bun run build",
    "dev": "cd neuraForgeOS-monorepo/neuraforge-os && bun run dev",
    "lint": "cd neuraForgeOS-monorepo/neuraforge-os && bun run lint",
    "test": "cd neuraForgeOS-monorepo/neuraforge-os && bun run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "install-deps": "cd neuraForgeOS-monorepo/neuraforge-os && bun install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "prettier": "^2.8.7",
    "turbo": "^1.9.3",
    "typescript": "^5.0.4"
  }
}
