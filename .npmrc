# NeuraForge OS - Bun Package Manager Configuration
# This project uses Bun as the package manager
# Prevent accidental npm usage

# Use Bun as the package manager
package-manager=bun

# Disable npm install warnings
fund=false
audit=false

# Use Bun registry settings
registry=https://registry.npmjs.org/

# Prevent npm from creating package-lock.json
package-lock=false

# Use Bun for script execution
script-shell=bun

# Performance optimizations for Bun
prefer-offline=true
cache-max=86400000

# Security settings
audit-level=moderate
